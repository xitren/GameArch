{
    "version": 3,
    "configurePresets": [
        {
            "name": "config_host",
            "hidden": true,
            "description": "Sets Unix Makefiles generator, build and install directory",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "config_host_debug",
            "hidden": true,
            "inherits": "config_host",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "config_host_release",
            "hidden": true,
            "inherits": "config_host",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "config_host_mac",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_OSX_DEPLOYMENT_TARGET": "11"
            }
        },
        {
            "name": "config_host_linux",
            "hidden": true
        },
        {
            "name": "config_host_debug_mac",
            "displayName": "Host Debug Mac",
            "inherits": [
                "config_host_debug",
                "config_host_mac"
            ],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "config_host_release_mac",
            "displayName": "Host Release Mac",
            "inherits": [
                "config_host_release",
                "config_host_mac"
            ],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "config_host_debug_linux",
            "displayName": "Host Debug Linux",
            "inherits": [
                "config_host_debug",
                "config_host_linux"
            ],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        },
        {
            "name": "config_host_release_linux",
            "displayName": "Host Release Linux",
            "inherits": [
                "config_host_release",
                "config_host_linux"
            ],
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default_base",
            "hidden": true,
            "verbose": true
        },
        {
            "name": "default_host_debug",
            "hidden": true,
            "inherits": "default_base",
            "configurePreset": "config_host_debug"
        },
        {
            "name": "default_host_release",
            "hidden": true,
            "inherits": "default_base",
            "configurePreset": "config_host_release"
        },
        {
            "name": "default_host_debug_mac",
            "displayName": "Host Debug Mac",
            "inherits": "default_base",
            "configurePreset": "config_host_debug_mac"
        },
        {
            "name": "default_host_release_mac",
            "displayName": "Host Release Mac",
            "inherits": "default_base",
            "configurePreset": "config_host_release_mac"
        },
        {
            "name": "default_host_debug_linux",
            "displayName": "Host Debug Linux",
            "inherits": "default_base",
            "configurePreset": "config_host_debug_linux"
        },
        {
            "name": "default_host_release_linux",
            "displayName": "Host Release Linux",
            "inherits": "default_base",
            "configurePreset": "config_host_release_linux"
        }
    ],
    "testPresets": [
        {
            "name": "tests_host_all_mac",
            "displayName": "Host All Mac",
            "configurePreset": "config_host_release_mac",
            "output": {
                "outputOnFailure": true,
                "verbosity": "extra"
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        },
        {
            "name": "tests_host_all_linux",
            "displayName": "Host All Linux",
            "configurePreset": "config_host_release_linux",
            "output": {
                "outputOnFailure": true,
                "verbosity": "extra"
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}